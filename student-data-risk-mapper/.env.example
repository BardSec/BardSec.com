# Application
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
BASE_URL=http://localhost:8000

# Database (for local development without Docker)
DATABASE_URL=postgresql+asyncpg://riskmapper:riskmapper_secret@localhost:5432/riskmapper
DATABASE_URL_SYNC=postgresql://riskmapper:riskmapper_secret@localhost:5432/riskmapper

# Microsoft Entra ID (Azure AD) Configuration
# Get these from your Entra ID App Registration
ENTRA_CLIENT_ID=your-client-id
ENTRA_CLIENT_SECRET=your-client-secret
ENTRA_TENANT_ID=your-tenant-id

# Role mapping via Entra Group Object IDs (optional)
# Users in these groups get elevated roles; others default to 'user'
ENTRA_ADMIN_GROUP_ID=
ENTRA_AUDITOR_GROUP_ID=
